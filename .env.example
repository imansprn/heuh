APP_ENV=development
APP_NAME=heuh

# Required Configuration
GOOGLE_CHAT_WEBHOOK_URL=your_webhook_url_here

# Optional Configuration - Server
PORT=3000                           # Default: 3000
NODE_ENV=development               # Options: development, test, production

# Optional Configuration - Security
GITHUB_WEBHOOK_SECRET=             # Default: none (webhook verification skipped)
RATE_LIMIT_WINDOW_MS=900000       # Default: 900000 (15 minutes)
RATE_LIMIT_MAX_REQUESTS=100       # Default: 100 requests per window

# Optional Configuration - Application
LOG_LEVEL=info                    # Default: info (options: error, warn, info, debug)
REQUEST_TIMEOUT=5000              # Default: 5000 (5 seconds)
MAX_PAYLOAD_SIZE=102400          # Default: 102400 (100KB)

# Webhook Secrets
SENTRY_WEBHOOK_SECRET=your_sentry_webhook_secret